{
    "compilerOptions": {
        "allowJs": false,
        "module": "commonjs",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "strictNullChecks": true,
        "sourceMap": false,
        "target": "ES6",
        "declaration": true,
        "outDir": "./dist"
    },
    "include": [
        "./src/**/*",
        "./test/**/*",
        "./cli/**/*",
    ]
}
